#!/usr/bin/env bash

set -ex

RUBY_VERSION="3.3"
RAILS_VERSION="7.1"

# Build for Node
bin/rbwasm build --ruby-version ${RUBY_VERSION} -o .wasm/ruby-${RUBY_VERSION}.wasm
bin/rbwasm pack .wasm/ruby-${RUBY_VERSION}.wasm \
  --dir ./app::/app \
  --dir ./config::/config \
  --dir ./db::/db \
  --dir ./vendor::/vendor \
  --dir ./public::/public \
  --dir ./lib::/lib \
  -o .wasm/rails-${RAILS_VERSION}-ruby-${RUBY_VERSION}.wasm
